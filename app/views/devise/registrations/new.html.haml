.wrapper
  .header
    .header__title
      = link_to root_path, class: "header__title__link" do
        Voice Memo
  .signup-content
    .signup-content__text
      新規登録
    .signup-content__form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: @user
        .field
          = f.label :name, "ニックネーム"
          %br/
          = f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "例) ヴォイス太郎"
        .field
          = f.label :email, "メールアドレス"
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email"
        .field
          = f.label :password, "パスワード"
          %br/
          = f.password_field :password, autocomplete: "new-password", placeholder: "8文字以上の半角英数"
        .field
          = f.label :password_confirmation, "確認用"
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "再度入力"
        .actions
          = f.submit "新規登録", class: "session-btn"
        = link_to new_user_session_path, class: "session-link" do
          ログインはこちら
            

          
